generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  id         Int          @id @default(autoincrement())
  name       String       
  balance    Int       
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Bet        Bet[]

  @@map("participants")
}

model Game {
  id             Int          @id @default(autoincrement())
  homeTeamName   String
	awayTeamName   String
	homeTeamScore  Int
	awayTeamScore  Int
	isFinished     Boolean     
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  Bet            Bet[]

  @@map("games")
}

model Bet {
  id             Int          @id @default(autoincrement())
	homeTeamScore  Int
	awayTeamScore  Int
	amountBet      Int
  gameId         Int          
  Game           Game         @relation(fields: [gameId], references: [id]) 
  participantId  Int
  Participant    Participant  @relation(fields: [participantId], references: [id])
  amountWon      Int?    
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("bets")
}